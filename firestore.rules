rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Config (Categories, etc.): Publicly readable, only admins can write.
    match /config/{docId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super_admin'];
    }

    // Articles: Publicly readable, only admins can write.
    match /articles/{articleId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super_admin'];
    }

    // Users: Can only read and write their own data. Admins can read anyone's data.
    match /users/{userId} {
      allow read: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super_admin'];
      allow write: if request.auth.uid == userId;
      
      // User data subcollections: savedWords, likedArticles, settings, viewRecords
      match /data/{document=**} {
        allow read, write: if request.auth.uid == userId;
      }
    }
  }
}