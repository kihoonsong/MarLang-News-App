rules_version = '2';

// Firebase Storage 보안 규칙 (임시 완화)
service firebase.storage {
  match /b/{bucket}/o {
    
    // 임시로 모든 인증된 사용자에게 읽기/쓰기 권한 부여
    // TODO: 이미지 업로드 문제 해결 후 원래 규칙으로 복원 필요
    match /{allPaths=**} {
      allow read: if true; // 모든 사용자가 읽기 가능
      allow write: if request.auth != null; // 인증된 사용자만 쓰기 가능
    }
  }
}